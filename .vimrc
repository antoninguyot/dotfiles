" General options
set number
set relativenumber
syntax on
set lazyredraw


" Code Identation
set autoindent
set smarttab
set tabstop=4

" Code folding
set foldmethod=indent
set foldnestmax=3

" Search
set hlsearch
set ignorecase
set smartcase

" Display
set display+=lastline
set encoding=utf-8
set linebreak
set wrap
set laststatus=2
set ruler
set wildmenu
set cursorline