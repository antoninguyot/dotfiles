// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "!phpactor"],
      "formatter": {
        "external": {
          "command": "vendor/bin/pint"
        }
      }
    },
    "Vue.js": {
      "language_servers": ["vue-language-server", "vtsls", "..."],
      "format_on_save": "on"
    }
  },
  "completions": {
    "lsp_fetch_timeout_ms": 1000
  },
  "vim_mode": false,
  "auto_install_extensions": {
    "asciidoc": true,
    "terraform": true,
    "dockerfile": true,
    "helm": true,
    "github-actions": true,
    "astro": true,
    "php": true,
    "html": true,
    "xml": true,
    "toml": true,
    "sql": true,
    "make": true,
    "svelte": true
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "helix_mode": false,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": "One Dark",
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml",
      "**/values*.yaml"
    ]
  }
}
