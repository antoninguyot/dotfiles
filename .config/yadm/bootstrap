#!/bin/sh
# vim: set ft=sh sw=2 et :

install_brew() {
  # Proudly borrowed from:
  # https://github.com/duckfullstop/dotfiles/blob/f734eea399a7ccd1c25b57242997e79f230abc4d/.config/yadm/bootstrap

  # install Homebrew if it's missing
  if ! command -v brew >/dev/null 2>&1; then
    echo "Installing Homebrew"
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
		export PATH="/opt/homebrew/bin:$PATH"
  fi

  if [ -f "$HOME/.Brewfile" ]; then
    echo "Updating Homebrew bundle"
    brew bundle --global --cleanup
  fi
}

configure_sudo() {
  sed "s/^#auth/auth/" /etc/pam.d/sudo_local.template | sudo tee /etc/pam.d/sudo_local > /dev/null
}

configure_dock() {
  # Dock > Automatically hide and show the Dock
  defaults write com.apple.dock autohide -bool true
  
  # Show recent applications in Dock
  defaults write com.apple.dock "show-recents" -bool false

  dockutil --no-restart --remove all
  dockutil --no-restart --add "/Applications/Safari.app"
  dockutil --no-restart --add "/Applications/Messages.app"
  dockutil --no-restart --add "/Applications/Mail.app"
  dockutil --no-restart --add "/Applications/Calendar.app"
  dockutil --no-restart --add "/Applications/Music.app"
  dockutil --no-restart --add "/Applications/Visual Studio Code.app"
  dockutil --no-restart --add "/Applications/ChatGPT.app"
  dockutil --no-restart --add "/Applications/Ghostty.app"
  dockutil --no-restart --add "~/Downloads" --view fan --display stack
}

configure_macos() {
  # Windows & Apps > Prefer tabs when opening documents
  defaults write -globalDomain AppleWindowTabbingMode -string "always"

  # Menu Bar Only > Clock Options > Show seconds
  defaults write "com.apple.menuextra.clock" ShowSeconds -bool true

  # Finder > View > Show Path Bar
  defaults write com.apple.finder ShowPathbar -bool true

  # Finder > View > As List
  defaults write com.apple.finder FXPreferredViewStyle -string "Nlsv"
  defaults write com.apple.finder FK_DefaultViewStyle -string "Nlsv"

  # Show all filename extensions
  defaults write NSGlobalDomain AppleShowAllExtensions -bool true

  # Show wraning before changing an extension
  defaults write com.apple.finder FXEnableExtensionChangeWarning -bool false

  # Tap to click
  defaults write com.apple.driver.AppleBluetoothMultitouch.trackpad Clicking -bool true
  defaults write com.apple.AppleMultitouchTrackpad Clicking -bool true

  # Double-click title bar to zoom
  defaults write -globalDomain AppleActionOnDoubleClick -string "Zoom"

  # Set fast key repeat rate
  defaults write -globalDomain KeyRepeat -int 2
}

configure_ssh() {
  if ! command -v ssh-keygen >/dev/null 2>&1; then
    echo "ssh-keygen not found; skipping SSH setup"
    return 0
  fi

  if [ ! -d "$HOME/.ssh" ]; then
    mkdir -p "$HOME/.ssh"
  fi
  chmod 700 "$HOME/.ssh" 2>/dev/null || true

  if [ ! -f "$HOME/.ssh/id" ]; then
    user_name="$(id -un 2>/dev/null || echo "${USER:-user}")"
    host_name="$(hostname 2>/dev/null || echo "host")"
    comment="${user_name}@${host_name}"

    echo "Generating SSH key: $HOME/.ssh/id"
    ssh-keygen -t ed25519 -f "$HOME/.ssh/id" -N "" -C "$comment"
  fi

  if [ -f "$HOME/.ssh/id" ] && [ ! -f "$HOME/.ssh/id.pub" ]; then
    echo "Deriving SSH public key: $HOME/.ssh/id.pub"
    ssh-keygen -y -f "$HOME/.ssh/id" > "$HOME/.ssh/id.pub"
  fi

  chmod 600 "$HOME/.ssh/id" 2>/dev/null || true
  chmod 644 "$HOME/.ssh/id.pub" 2>/dev/null || true

  if ! command -v yadm >/dev/null 2>&1; then
    return 0
  fi

  origin_url="$(yadm remote get-url origin 2>/dev/null || true)"
  if [ -z "$origin_url" ]; then
    return 0
  fi

  case "$origin_url" in
    git@*:*|ssh://*)
      return 0
      ;;
    http://*|https://*)
      host_and_path="${origin_url#http://}"
      host_and_path="${host_and_path#https://}"
      host="${host_and_path%%/*}"
      case "$host" in
        *@*) host="${host##*@}" ;;
      esac

      if [ "$host_and_path" = "$host" ]; then
        echo "Could not parse yadm origin URL: $origin_url"
        return 0
      fi

      path="${host_and_path#*/}"
      ssh_url="git@${host}:${path}"

      echo "Switching yadm origin to SSH: $ssh_url"
      yadm remote set-url origin "$ssh_url"
      ;;
  esac
}

configure_github() {
  if ! command -v gh >/dev/null 2>&1; then
    echo "gh not found; skipping GitHub setup"
    return 0
  fi

  if ! gh auth status -h github.com >/dev/null 2>&1; then
    if [ -n "${GH_TOKEN:-}" ]; then
      echo "Authenticating gh with GH_TOKEN"
      printf "%s" "$GH_TOKEN" | gh auth login -h github.com --with-token
    else
      echo "Logging in to GitHub via gh (may open a browser)..."
      gh auth login -h github.com --git-protocol ssh --web
    fi
  fi

  if [ ! -f "$HOME/.ssh/id.pub" ]; then
    return 0
  fi

  fingerprint="$(ssh-keygen -lf "$HOME/.ssh/id.pub" 2>/dev/null | awk '{print $2}')"
  if [ -n "$fingerprint" ] && gh ssh-key list 2>/dev/null | grep -Fq "$fingerprint"; then
    return 0
  fi

  user_name="$(id -un 2>/dev/null || echo "${USER:-user}")"
  host_name="$(hostname 2>/dev/null || echo "host")"
  title="${user_name}@${host_name}"

  echo "Uploading SSH key to GitHub: $HOME/.ssh/id.pub"
  gh ssh-key add "$HOME/.ssh/id.pub" --title "$title" >/dev/null 2>&1 || true
}

system_type=$(uname -s)

if [ "$system_type" = "Darwin" ]; then
  install_brew
  configure_sudo
  configure_dock
  configure_macos
  
  killall Dock
  killall Finder
fi

configure_ssh
configure_github
